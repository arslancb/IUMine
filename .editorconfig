# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Gruntfile.js]
indent_style = space
indent_size = 2

[src/javascripts/**.js]
indent_style = space
indent_size = 4

[src/sass/**.scss]
indent_style = space
indent_size = 4
